<%= form_for @report, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :official_case_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :official_case_number, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :crime_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :crime_date, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :crime_time, :class => 'control-label' %>
    <div class="controls">
      <%= f.time_select :crime_time, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :location_address, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :location_address, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :location_lat, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :location_lat, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :location_lon, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :location_lon, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :location_category, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :location_category, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :emergency_arrival_time, :class => 'control-label' %>
    <div class="controls">
      <%= f.time_select :emergency_arrival_time, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :police_arrival_time, :class => 'control-label' %>
    <div class="controls">
      <%= f.time_select :police_arrival_time, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :relationship_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :relationship_id, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :weapon_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :weapon_id, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :motive_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :motive_id, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :report_status_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :report_status_id, :class => 'form-control' %>
    </div>
  </div>

  
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            reports_path, :class => 'btn btn-default' %>
 
<% end %>
