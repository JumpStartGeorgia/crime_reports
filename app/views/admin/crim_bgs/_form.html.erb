<%= semantic_form_for([:admin, @crim_bg]) do |f| %>
	<%= f.error_messages %>

  <% create_sorted_translation_objects(@crim_bg.crim_bg_translations).each do |trans| %>
		<%= f.fields_for :crim_bg_translations, trans do |translation| %>

			<div id="form-<%= trans.locale %>" class="multilanguage_nested">
				<h3><%= t("app.language.#{trans.locale}") %></h3>

				<%= translation.input :name %>
				<%= translation.hidden_field :locale , :value => trans.locale %>
			</div>

		<% end %>
	<% end %>

  <div class="form-group">
    <%= f.submit nil, :class => 'btn btn-primary' %>
	  <%= f.submit t('helpers.links.reset'), :class => 'btn btn-warning', :type => :reset, :name => :reset %>
	  <%= link_to t('helpers.links.cancel'), admin_crim_bgs_path, :class => 'btn btn-mini btn-warning' %>
  </div>
<% end %>
