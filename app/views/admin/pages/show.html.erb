<%- model_class = Page -%>
<%- model_class_trans = PageTranslation -%>
<% title t '.title', :default => model_class.model_name.human %>


<div class="form-group form-group-admin-buttons">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_pages_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_page_path(@page), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_page_path(@page),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm")) },
              :class => 'btn btn-danger' %>
	<%= link_to t('helpers.links.admin'), admin_path, :class => 'btn btn-default' %>
</div>

<p><strong><%= model_class.human_attribute_name(:name) %>:</strong>
<%= @page.name %></p>

<p><strong><%= model_class_trans.human_attribute_name(:title) %>:</strong>
<%= @page.title %></p>

<p><strong><%= model_class.human_attribute_name(:content) %>:</strong></p>
<div class="todo tinymce_format">
  <%= simple_format_no_tags(@page.content, {}, {sanitize: false}) %>
</div>



