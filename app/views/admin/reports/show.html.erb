<%- model_class = Report -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:official_case_number) %>:</strong></dt>
  <dd><%= @report.official_case_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:crime_date) %>:</strong></dt>
  <dd><%= @report.crime_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:crime_time) %>:</strong></dt>
  <dd><%= @report.crime_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location_address) %>:</strong></dt>
  <dd><%= @report.location_address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location_lat) %>:</strong></dt>
  <dd><%= @report.location_lat %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location_lon) %>:</strong></dt>
  <dd><%= @report.location_lon %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location_category) %>:</strong></dt>
  <dd><%= @report.location_category %></dd>
  <dt><strong><%= model_class.human_attribute_name(:emergency_arrival_time) %>:</strong></dt>
  <dd><%= @report.emergency_arrival_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:police_arrival_time) %>:</strong></dt>
  <dd><%= @report.police_arrival_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:relationship_id) %>:</strong></dt>
  <dd><%= @report.relationship_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:weapon_id) %>:</strong></dt>
  <dd><%= @report.weapon_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:motive_id) %>:</strong></dt>
  <dd><%= @report.motive_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:report_status_id) %>:</strong></dt>
  <dd><%= @report.report_status_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              reports_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_report_path(@report), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              report_path(@report),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
