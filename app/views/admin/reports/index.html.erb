<%- model_class = Report -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:official_case_number) %></th>
      <th><%= model_class.human_attribute_name(:crime_date) %></th>
      <th><%= model_class.human_attribute_name(:crime_time) %></th>
      <th><%= model_class.human_attribute_name(:location_address) %></th>
      <th><%= model_class.human_attribute_name(:location_lat) %></th>
      <th><%= model_class.human_attribute_name(:location_lon) %></th>
      <th><%= model_class.human_attribute_name(:location_category) %></th>
      <th><%= model_class.human_attribute_name(:emergency_arrival_time) %></th>
      <th><%= model_class.human_attribute_name(:police_arrival_time) %></th>
      <th><%= model_class.human_attribute_name(:relationship_id) %></th>
      <th><%= model_class.human_attribute_name(:weapon_id) %></th>
      <th><%= model_class.human_attribute_name(:motive_id) %></th>
      <th><%= model_class.human_attribute_name(:report_status_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= link_to report.id, report_path(report) %></td>
        <td><%= report.official_case_number %></td>
        <td><%= report.crime_date %></td>
        <td><%= report.crime_time %></td>
        <td><%= report.location_address %></td>
        <td><%= report.location_lat %></td>
        <td><%= report.location_lon %></td>
        <td><%= report.location_category %></td>
        <td><%= report.emergency_arrival_time %></td>
        <td><%= report.police_arrival_time %></td>
        <td><%= report.relationship_id %></td>
        <td><%= report.weapon_id %></td>
        <td><%= report.motive_id %></td>
        <td><%= report.report_status_id %></td>
        <td><%=l report.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_report_path(report), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      report_path(report),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_admin_report_path,
            :class => 'btn btn-primary' %>
